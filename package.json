{
  "name": "polynomialfi",
  "version": "1.0.14",
  "description": "Official TypeScript SDK for Polynomial Perpetuals - Trade crypto perpetuals with ease",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "polynomial",
    "perpetuals",
    "trading",
    "defi",
    "crypto",
    "derivatives",
    "typescript",
    "sdk",
    "web3"
  ],
  "author": "Polynomial Protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/polynomial-protocol/polynomial-sdk.git"
  },
  "homepage": "https://polynomial.fi",
  "bugs": {
    "url": "https://github.com/polynomial-protocol/polynomial-sdk/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "bignumber.js": "^9.3.1",
    "viem": "^2.31.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
